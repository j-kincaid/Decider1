{
  "version": 2,
  "name": "artfave",
  "builds": [
      {
          "src": "artfave/wsgi.py",
          "use": "@vercel/python",
          "config": {
              "maxLambdaSize": "15mb",
              "runtime": "python3.9",

            "artfave/**/*.py": {
            "excludeFiles": "**/*.jpg"
      }
          }
      },
      {
          "src": "build_files.sh",
          "use": "@vercel/static-build",
          "config": {
              "distDir": "staticfiles_build"
          }
      }
  ],
  "routes": [
      {
          "src": "/static/(.*)",
          "dest": "/static/$1"
      },
      {
          "src": "/(.*)",
          "dest": "artfave/wsgi.py"
      }
 
  ]
}
